@model IEnumerable<SensenHosp.Models.AlertPosts>

@{
    ViewData["Title"] = "Index";
}

<h2>Alert Posts</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AlertTitle)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.AlertStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateEffectivity)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlertTitle)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlertStatus)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.DateEffectivity)
            </td>*@
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">View Full Details</a> |
                <a asp-action="Edit" asp-route-id="@item.ID">Update</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
