@model SensenHosp.Models.AlertPosts

@{
    ViewData["Title"] = "Create";
}

<h2>Add New Alert Post</h2>

<h4>Please Enter Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlertTitle" class="control-label"></label>
                <input asp-for="AlertTitle" class="form-control" />
                <span asp-validation-for="AlertTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlertStatus" class="control-label"></label>
                <input asp-for="AlertStatus" class="form-control" />
                <span asp-validation-for="AlertStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEffectivity" class="control-label"></label>
                <input asp-for="DateEffectivity" class="form-control" />
                <span asp-validation-for="DateEffectivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
