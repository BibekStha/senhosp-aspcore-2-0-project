@model SensenHosp.Models.AlertPosts

@{
    ViewData["Title"] = "Create";
}

<h2 class="heading heading-h2">Admin Dashboard</h2>
<h3 class="heading">Add New Alert Post</h3>

<hr />
<div class="row">
    <div class="col-md-8  center-div">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlertTitle" class="control-label"></label>
                <input asp-for="AlertTitle" class="form-control" />
                <span asp-validation-for="AlertTitle" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col">
                    <label asp-for="AlertStatus" class="control-label"></label>
                    <input asp-for="AlertStatus" class="form-control" />
                    <span asp-validation-for="AlertStatus" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="DateEffectivity" class="control-label"></label>
                    <input asp-for="DateEffectivity" class="form-control" />
                    <span asp-validation-for="DateEffectivity" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="7" cols="45" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default submit" />
            </div>
        </form>
    </div>
</div>

